<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--裁剪框-->
    <declare-styleable name="CropView">
        <attr name="cv_outer_bg_color" format="reference|color"/><!--外层背景色-->
        <attr name="cv_border_line_color" format="reference|color"/><!--边框颜色-->
        <attr name="cv_corner_line_color" format="reference|color"/><!--拐角颜色-->
        <attr name="cv_middle_line_color" format="reference|color"/><!--中间线颜色-->
        <attr name="cv_scan_line_color" format="reference|color"/><!--网格线颜色-->
        <attr name="cv_border_line_width" format="dimension"/><!--边框线宽度-->
        <attr name="cv_corner_line_with" format="dimension"/><!--拐角线宽度-->
        <attr name="cv_corner_line_height" format="dimension"/><!--拐角线高度-->
        <attr name="cv_scan_line_width" format="dimension"/><!--扫描线宽度-->
        <attr name="cv_border_length" format="dimension"/><!--边框长度，初始化正方形-->
        <attr name="cv_min_border_length" format="dimension"/><!--最小边框长度-->
        <attr name="cv_crop_model" > <!--裁剪模式-->
            <enum name="rect" value="1"/>
            <enum name="oval" value="2"/>
            <enum name="circle" value="3"/>
        </attr>
        <attr name="cv_is_show_corner_line" format="boolean"/><!--是否显示拐角线-->
        <attr name="cv_is_show_border_line" format="boolean"/><!--是否显示矩形框-->
        <attr name="cv_is_show_middle_line" format="boolean"/><!--是否显示中间线-->
        <attr name="cv_is_show_scan_line" format="boolean"/><!--是否显示扫描线-->
        <attr name="cv_is_touch_corner_line_scale" format="boolean"/><!--是触摸拐角缩放-->
        <attr name="cv_is_touch_middle_line_scale" format="boolean"/><!--是触摸中间线缩放-->
        <attr name="cv_width_percent" format="string"/><!--宽度占屏幕比例，10%w  10%h-->
        <attr name="cv_height_percent" format="string"/><!--高度占屏幕比例,10%w  10%h-->
    </declare-styleable>

</resources>